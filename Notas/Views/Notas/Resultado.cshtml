
@{
    ViewBag.Title = "Resultado";
}

<h2>Resultado</h2>

<div class="container">
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        <div class="panel panel-primary">
            <div class="panel-heading">Control de notas</div>
            <div class="panel-body">
                <form action="Resultado" method="post">
                    <table class="table">
                        <div class="col-sm-3"></div>
                        <div class="row">
                            <div class="form-group col-sm-4">
                                <label>Nombre del alumno</label>
                                <input type="text" class="form-control" value="@ViewBag.nombre" readonly />
                                <label style="font-style:italic">Grado</label>
                                <input type="text" class="form-control" value="@ViewBag.grado" readonly />
                            </div>
                        </div>

                        <thead>
                            <tr>
                                <th scope="col">#</th>

                                <th scope="col">Materia</th>
                                <th scope="col">Promedio</th>
                                <th scope="col">Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>

                                <td>Matematica</td>
                                <td>@ViewBag.promedioM</td>
                                <td>@if (ViewBag.promedioM > 6) {
                                    <font color="green">Aprobado</font>
                                }
                                else
                                {
                                    <font color="red">Reprobado</font>
                                }

                                </td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>

                                <td>Ciencias</td>
                                <td>@ViewBag.promedioC</td>
                                <td>
                                    @if (ViewBag.promedioC > 6)
                                    {
                                        <font color="green">Aprobado</font>
                                    }
                                    else
                                    {
                                        <font color="red">Reprobado</font>
                                    }
                                                            </td>
                            </tr>
                            <tr>
                                <th scope="row">3</th>

                                <td>Lenguaje</td>
                                <td>@ViewBag.promedioL</td>
                                <td>
                                    @if (ViewBag.promedioL > 6)
                                    {
                                        <font color="green">Aprobado</font>
                                    }
                                    else
                                    {
                                        <font color="red">Reprobado</font>
                                    }
                                                            </td>
                            </tr>
                            <tr>
                                <th scope="row">4</th>

                                <td>Tecnologia</td>
                                <td>@ViewBag.promedioT</td>
                                <td>
                                    @if (ViewBag.promedioT > 6)
                                    {
                                        <font color="green">Aprobado</font>
                                    }
                                    else
                                    {
                                        <font color="red">Reprobado</font>
                                    }
                                                            </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="col-sm-2"></div>
                    <div class="row">
                        <div class="form-group col-sm-4">
                            <label class="col-sm-5">CUM</label>
                            <input type="text" class="form-control" placeholder="CUM" value="@ViewBag.cum" readonly />
                          
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>